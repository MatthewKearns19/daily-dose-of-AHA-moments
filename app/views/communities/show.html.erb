<div class="container">
  <div class="col-sm-12">
    <div class="row">
      <div class="col-sm-10 mt-1 ml-3">
        <h2>Community name - <%= @community.name %></h2>
      </div>
    </div>
    <div class="row mt-0 mb-1">
      <div class="col-sm-7 ml-3">
          <p class="mt-0"><%= simple_format @community.description %></p>
          <h4 class="mb-0">latest posts:</h4>
      </div>
      <div class="col-sm-3">
        <%= link_to "Create New Post", new_community_post_path(@community), class: "btn btn-outline-primary float-right mt-3 mb-0 mr-4" %>
      </div>
    </div>
    <div class="col-sm-10 mt-1">
      <%= render partial: "posts/list", locals:{posts: @posts}%>
    </div>
  </div>
</div>
