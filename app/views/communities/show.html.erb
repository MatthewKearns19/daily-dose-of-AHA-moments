<div class="container">
  <div class="col-sm-12">
    <div class="row">
      <div class="col-sm-10 mt-1 ml-3">
        <h2>Community name - <%= @community.name %></h2>
      </div>
    </div>
    <div class="row mt-0 mb-1">
      <div class="col-sm-8 ml-3">
        <p class="mt-0"><%= simple_format @community.description %></p>
      </div>
      <div class="col-sm-3">
        <div class="row">
        <%= link_to "Create New Post", new_community_post_path(@community), class: "btn btn-outline-primary float-right mt-3 mb-0 mr-4" %>
        </div>
      </div>
    </div>
    <div class="row mt-0 mb-1">
      <div class="col-sm-8 ml-3">
      </div>
      <div class="col-sm-3">
        <% if @user == current_user %>
          <div class="row mt-2 mb-0">
            <p class="mt-0 mb-0"">Hello Community admin</p>
          </div>
        <% end %>
      </div>
    </div>


    <div class="row mt-0 mb-1">
      <div class="col-sm-8 ml-3">
          <h4 class="mb-0">Latest posts:</h4>
      </div>
      <div class="col-sm-3">
        <% if @user == current_user %>
          <div class="row mt-2 mb-0">
            <%= link_to 'Edit this Community', edit_community_path(@community), class: "btn btn-outline-primary" %>
          </div>
        <% end %>
      </div>
    </div>
    <div class="col-sm-10 mt-1">
      <%= render partial: "posts/list", locals:{posts: @posts}%>
    </div>
  </div>
</div>
