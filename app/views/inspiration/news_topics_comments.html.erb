<div class="container">
  <div class="col-sm-12">
    <div class="row mt-4">
    </div>
    <div class="row">
      <div class="col-sm-0 mt-1">
      </div>
      <div class="col-sm-8 mt-1">
        <div class="card mt-3 mb-4 shadow p-3 mb-1 bg-white rounded">
          <h5 class="mt-0 mb-1">
            <a href="<%= @story['url'] %>"><%= @story['title'] %></a>
          </h5>
          <p>by <%= @story['by'] %>
          <%= time_ago_in_words(@story['time']) %> ago
        </div>

        <strong class=" h5 mt-2 mb-2">Quick view discussion on this topic</strong>

        <div>
          <% @comments.each do |comment| %>
            <div class="media mt-3 mb-3">
              <div class="media-body">
                <strong>
                  comment by <%= comment['by'] %> <small><%= time_ago_in_words(comment['time']) %> ago</small>
                </strong>
                <p class="mt-2"><%= sanitize comment['text'] %></p>
              </div>
            </div>
            <hr>
          <% end %>
        </div>
      </div>
      <div class="col-sm-5 mt-1">
      </div>
    </div>
  </div>
</div>
