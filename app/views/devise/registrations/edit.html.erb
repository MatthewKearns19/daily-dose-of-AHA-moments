<div class="container">
  <div class="col-sm-12">
    <div class="row">
      <div class="col-sm-3 mt-4">
      </div>
      <div class="col-sm-6 mt-4">
        <h2 class="mt-4 text-center">Edit Your Account</h2>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="form-group mt-4">
            <%= f.label :username %>
            <%= f.text_field :username, class: "form-control" %>
          </div>

          <div class="form-group mt-4">
            <%= f.label :first_name %>
            <%= f.text_field :first_name, autofocus: true, class: "form-control" %>
          </div>

          <div class="form-group mt-4">
            <%= f.label :last_name %>
            <%= f.text_field :last_name, autofocus: true, class: "form-control" %>
          </div>

          <div class="form-group mt-4">
            <%= f.label :email %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
          </div>

          <div class="form-group mt-4">
            <%= f.label :current_password %> <br />
            <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
          </div>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
          <% end %>

          <div class="form-group mt-4">
            <i>New </i><%= f.label :password %> <i>(leave field blank if you don't want to change it)</i><br />
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
            <% if @minimum_password_length %>
              <em><%= @minimum_password_length %> characters minimum</em>
            <% end %>
          </div>

          <div class="form-group mt-4">
            <%= f.label :password_confirmation %> <i>(passwords must match)</i><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
          </div>

          <div class="form-group mt-2 text-center">
            <%= f.submit "Update Account", class: "btn btn-light" %>
          </div>
        <% end %>

        <div class="row  mt-2 ">
          <div class="col text-center">
            <h5>Unhappy with account?</h5>
            <p><%= button_to "Cancel account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-light" %></p>
          </div>
        </div>
        <p class="mt-2 text-center"><%= link_to "Back", :back %></p>
      </div>
      <div class="col-sm-3 mt-4"></div>
    </div>
  </div>
</div>
