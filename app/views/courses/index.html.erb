<div class="row">
  <div class="col-sm-8 mt-4 mb-0">
    <% if @courses.size > 0 %>
      <h2>All courses of <%= @user.username %></h2>
    <% else %>
      <h3>Sorry <%= @user.username %> has no courses</h3>
    <% end %>
  </div>
  <div class="col-sm-4">
    <div>
      <%= link_to 'New Course', new_user_course_path(@user), class: "btn btn-outline-primary" %>
    </div>
  </div>
</div>
<div class="row mt-4">
  <div class="col-sm-8">
    <%= render partial: "courses/list", locals:{courses: @courses}%>
  </div>
</div>
