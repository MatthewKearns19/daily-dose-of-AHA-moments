<div class="row">
  <div class="col-sm-6">
    <%= form_for [@user, @course] do |f| %>
      <div class="form-group">
        <%= label_tag :course_name %>
        <%= f.text_field :course_name, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= label_tag :course_description %>
        <%= f.text_area :course_description, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= label_tag :course_content %>
        <%= f.text_area :course_content, class: "form-control" %>
      </div>

      <%= f.submit "Launch New Course", class: "btn btn-outline-primary mb-2" %>
    <% end %>
  </div>
</div>
